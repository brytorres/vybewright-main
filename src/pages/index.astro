---
// https://github.com/fontsource/font-files/tree/3ef0dc8e3b625831a3ce7d586194c718491b7c6f/fonts/google/jetbrains-mono
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import { fade, ViewTransitions } from 'astro:transitions'


import { SITE_NAME, DESCRIPTION } from '../../src/config'

interface Props {
    title: string;
}

const isHome = Astro.url.pathname === '/'

const year = new Date().getFullYear()

---

<!doctype html>
<html
    lang="en"
    transition:animate={fade({ duration: '1s' })}
>
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={ DESCRIPTION } />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Vybewright | Official Site</title>

    <ViewTransitions />
</head>
<body class={`text-gray-500 dark:text-gray-100 is-home`}>
<div class="flex flex-col h-screen justify-between max-w-5xl mx-auto space-y-4 py-16 px-14 ">
    <main>
        <!--<slot />-->
        <h1>Vybewright</h1>

        <p><a href="https://www.google.com">music</a></p>
        <p class="pb-6"><a href="https://www.youtube.com/@vybewright/streams">youtube</a></p>

        <hr>

        <p class="pt-8"><a href="/blog">blog</a></p>
        <p><a rel="me" href="https://sunny.garden/@vybewright">mastadon</a></p>
        <p class="pb-6"><a href="https://www.instagram.com/vybewright/">instagram</a></p>

        <hr>

        <p class="pt-8"><a href="/connect">connect</a></p>

    </main>

    <footer>
        <p class="text-xs">Â© {year} Vybewright Official Site | Designed by He Himself</p>
    </footer>
</div>
</body>
</html>
<style is:global>
    html {
        font-family: "JetBrains Mono", system-ui, sans-serif;
        font-size: 16px;
        line-height: 1.2rem;
        background: #13151a;
        background-size: 224px;
    }

    /* Light mode */
    @media (prefers-color-scheme: light) {
        html {
            background: #fff;
        }
    }

    /* We want to bump up the font size on touch screens so that tap targets are easier to hit */
    @media (hover: none) {

        main {
            font-size: 18px;
        }

        /* Pad links that are the only child of a paragraph */
        p > a:only-child {
            padding: 0.5rem 0;
            display: inline-block;
        }
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }

    h1 {
        font-size: 1.1rem;
        font-style: italic;
        font-weight: 500;
        margin-bottom: 1rem;
    }


    body:not(.is-home) a {
        text-decoration: underline;
    }
</style>
